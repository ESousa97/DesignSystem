# Auto detect text files and perform LF normalization
* text=auto eol=lf

# Source files
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.css text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yaml text eol=lf
*.yml text eol=lf

# Config files
*.config.js text eol=lf
*.config.mjs text eol=lf
.editorconfig text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
.eslintrc* text eol=lf
.prettierrc* text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.otf binary
*.mp4 binary
*.webm binary

# Generated files - do not diff
package-lock.json -diff
*.min.js -diff
*.min.css -diff

# Linguist overrides for GitHub
*.mdx linguist-language=Markdown
*.stories.tsx linguist-documentation=false
