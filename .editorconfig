# EditorConfig - https://editorconfig.org
# Configuração de estilo consistente para todos os editores

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{json,jsonc}]
indent_size = 2

[*.{ts,tsx,js,jsx}]
indent_size = 2

[*.css]
indent_size = 2

[*.yaml]
indent_size = 2

[Makefile]
indent_style = tab
